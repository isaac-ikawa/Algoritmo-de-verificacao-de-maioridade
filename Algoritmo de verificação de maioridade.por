programa
{
    funcao inicio()
    {
        inteiro idade

        // 1. Obtenção do valor
        escreva("Informe sua idade: ")
        leia(idade)

        // 2. Verificação e impressão
        se (idade >= 18)
        {
            escreva("Maior de idade")
        }
        senao
        {
            escreva("Menor de idade")
        }
    }
}
